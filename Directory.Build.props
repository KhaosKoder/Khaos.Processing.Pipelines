<Project>
  <PropertyGroup>
    <Product>Khaos.Processing.Pipelines</Product>
    <Company>Khaos</Company>
    <Authors>Khaos</Authors>
    <PackageOutputPath>$(MSBuildThisFileDirectory)artifacts\</PackageOutputPath>
    <PackageProjectUrl>https://github.com/KhaosOrg/Khaos.Processing.Pipelines</PackageProjectUrl>
    <RepositoryUrl>https://github.com/KhaosOrg/Khaos.Processing.Pipelines</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <MinVerTagPrefix>Khaos.Processing.Pipelines/v</MinVerTagPrefix>
    <MinVerAutoIncrement>minor</MinVerAutoIncrement>
    <!-- MinVerDefaultPreReleasePhase is deprecated; identifiers preserve the desired "alpha" phase. -->
    <MinVerDefaultPreReleaseIdentifiers>alpha.0</MinVerDefaultPreReleaseIdentifiers>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(IsPackable)' == 'true'">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MinVer" Version="5.*" PrivateAssets="all" />
  </ItemGroup>

  <Target Name="ApplyMinVerVersion"
          DependsOnTargets="MinVer"
          BeforeTargets="GetAssemblyVersion">
    <PropertyGroup Condition="'$(IsPackable)' != 'false'">
      <Version Condition="'$(Version)' == ''">$(MinVerVersion)</Version>
      <PackageVersion Condition="'$(PackageVersion)' == ''">$(MinVerVersion)</PackageVersion>
      <AssemblyVersion Condition="'$(AssemblyVersion)' == ''">$(MinVerMajor).$(MinVerMinor).0.0</AssemblyVersion>
      <FileVersion Condition="'$(FileVersion)' == ''">$(MinVerMajor).$(MinVerMinor).$(MinVerPatch).0</FileVersion>
    </PropertyGroup>
  </Target>
</Project>
